@model IEnumerable<Company>
@{
    <div class="row text-center">
    <h1>Our sponsors</h1>
    </div>
    
    <div class="row justify-content-center">
    @foreach(var company in Model)
    {
        <div class="card card border-primary mb-3" style="max-width: 20rem; ">
        <div class="card-header text-center"><h2>@company.CompanyName</h2></div>
        <div class = "card-body justify-content-center  d-flex flex-wrap align-items-center">
        @{
            var imgPath = "~/images/" +@company.NipCode+".png ";
        }
        <img class="img-fluid rounded mx-auto d-block "  src="@imgPath" asp-append-version="true" />
        </div>
        </div>
    }
    </div>
}
