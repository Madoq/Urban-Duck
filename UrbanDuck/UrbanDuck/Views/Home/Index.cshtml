@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> signInManager;

@{
    ViewData["Title"] = "Home Page";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="authors" content="Mateusz Nieplowicz, Seweryn Szymański, Bartłomiej Wołyniec, Mikołaj Śniechowski" />
    <meta name="description" content="a place where you can find cheap food and avoid wasting it " />
    <meta name="keywords" content="free food, Freeganism, dumpster diving, skipitarianism, urban foraging, doing the duck" />
    <meta name="viewport" content="width=device-width, inital-scale=1" />
    <title>Urban Duck :: Place you can save money and food at the same time</title>
</head>

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <a asp-controller="Company" asp-action="All">List All Companies</a>
    <a asp-controller="Contributor" asp-action="All">List All Contributors</a>
    <a asp-controller="Listing" asp-action="Available">View Listings</a>
    @if (signInManager.IsSignedIn(User))
                        {
                        <a asp-controller="Contributor" asp-action="GetById">Contributor Profile</a>
                        <a asp-controller="Listing" asp-action="MyListings">My Listings</a>
                        }
</div>
